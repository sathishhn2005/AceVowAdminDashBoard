        }
        else {
            var ProductId = $(this).find('.custom-control-input').val();
            lstProducts = lstProducts.filter(function (obj) {
                return obj.ProductId !== ProductId;
            });
            console.log(JSON.stringify(lstProducts));
        }
    });
</script>