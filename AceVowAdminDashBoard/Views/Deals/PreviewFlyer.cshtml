            }
            //$.each(lstProducts, function (key, value) {
            //    lstProducts.push({"ProductId":value.ProductId, "ThemeId": ThemeId });
            //})
            var param = { lstPreview: lstProducts, ThemeId: ThemeId, DealId: DealId};
