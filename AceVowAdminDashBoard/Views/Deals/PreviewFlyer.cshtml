@model IEnumerable<AceVowEntities.PreviewDeals>

@{
    ViewBag.Title = "PreviewFlyer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/css/FlyerStyle.css" rel="stylesheet" />

<div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-3 row-cols-xl-5">
        <div class="card">
