@model IEnumerable<AceVowEntities.PreviewDeals>

@{
    ViewBag.Title = "PreviewFlyer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*<link href="~/Content/css/FlyerStyle.css" rel="stylesheet" />*@

<div class="d-none container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-3 row-cols-xl-5">
        <div class="card">
            <img src="~/Content/Theme/images/1.png" class="card-img-top" alt="..." />
            <p class="card-text">
                <div class="form-check form-switch">
                    <input class="form-check-input addProduct" type="radio" name="themeSelect" id="themeId1" value="1">
                    <label class="form-check-label" for="themeId1">Select Theme</label>
                </div>
            </p>
        </div>
        <div class="card">
            <img src="~/Content/Theme/images/2.png" class="card-img-top" alt="..." />
            <p class="card-text">
                <div class="form-check form-switch">
                    <input class="form-check-input addProduct" type="radio" name="themeSelect" id="themeId2" value="2">
                    <label class="form-check-label" for="themeId2">Select Theme</label>
                </div>
            </p>
        </div>
        <div class="card">
            <img src="~/Content/Theme/images/31.png" class="card-img-top" alt="..." />
            <p class="card-text">
                <div class="form-check form-switch">
                    <input class="form-check-input addProduct" type="radio" name="themeSelect" id="themeId3" value="3">
                    <label class="form-check-label" for="themeId3">Select Theme</label>
                </div>
            </p>
        </div>
        <div class="card">
            <img src="~/Content/Theme/images/4.png" class="card-img-top" alt="..." />
            <p class="card-text">
                <div class="form-check form-switch">
                    <input class="form-check-input addProduct" type="radio" name="themeSelect" id="themeId4" value="4">
                    <label class="form-check-label" for="themeId4">Select Theme</label>
                </div>
            </p>
        </div>
        <div class="card">
            <img src="~/Content/Theme/images/7.png" class="card-img-top" alt="..." />
            <p class="card-text">
                <div class="form-check form-switch">
                    <input class="form-check-input addProduct" type="radio" name="themeSelect" id="themeId7" value="7">
                    <label class="form-check-label" for="themeId7">Select Theme</label>
                </div>
            </p>
        </div>
    </div>
</div>
<!-- /.container -->

<div class="d-none container pb-70 col-lg-12 col-md-12">
    <div class="shop-bottom-area">

        <!-- Shop Tab Content Start -->
        <div class="tab-content jump">
            <!-- Tab One Start -->
            <div id="shop-1" class="tab-pane active">
                <div class="form-group banner-content ng-star-inserted">
                    @*<h4 style="margin:15px !important;" class="text-center text-danger">The latest Recipes from your favorite Clients.</h4>*@
                    <div class="row my-4">
                        <div class="col-lg-4 col-7 p-lg-3">

                        </div>
                        <div class="d-none col-lg-4 col-5 p-lg-3">

                        </div>
                    </div>
                </div>
            </div>
            <div id="divRecipeProductList">
                <div class="shadow p-3 mb-1 bg-white rounded divider">
                    <div class="row">

                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <div class="card-group">
                                    <div class="card">
                                        <img class="card-img-top" src="https://alldealz.ca/ProductImages/@item.image" alt="Card image cap">
                                        <div class="card-body">
                                            <h5 class="text-danger card-title"><b>@item.Name</b></h5>

                                            <p>
                                                @if (item.OfferPrice.Equals(0))
                                                {
                                                    <span class="col-2 new-price">$ @item.RegularPrice</span>

                                                    <span>Qty: @item.Quantity</span>
                                                }
                                                else
                                                {

                                                    <span class="new-price">$ @item.OfferPrice </span><span class="old-price"> $ @item.RegularPrice</span>

                                                    <span>Qty: @item.Quantity</span>
                                                }
                                            </p>
                                            @if (item.SavingPercentage > 0)
                                            {
                                                <h2 style="position: absolute; margin-top: 7em; margin-left: 8rem;font-size: 15px;">
                                                    @item.SavingPercentage <span>%Off</span>
                                                </h2>
                                                <img src="https://i.ibb.co/k3Kf8mq/Asset-23-3x-8.png" alt="Asset-23-3x-8" border="0" style="width: 70%;margin-left: 4rem;">
                                            }
                                            else
                                            {
                                                <h2 style="position: absolute; margin-top: 7em; margin-left: 6rem;font-size: 14px;">
                                                    Offer<span>Coming soon</span>
                                                </h2>
                                                <img src="https://i.ibb.co/k3Kf8mq/Asset-23-3x-8.png" alt="Asset-23-3x-8" border="0" style="width: 70%;margin-left: 4rem;">

                                            }

                                        </div>
                                        <div class="card-footer">
                                            <p class="card-text">
                                                <div class="form-check form-switch">
                                                    <input class="form-check-input addProduct" type="checkbox" name="flexSwitchCheckChecked" id="@item.ProductId" value="@item.ProductId">
                                                    <label class="form-check-label" for="@item.ProductId">Add Product</label>
                                                </div>
                                            </p>
                                        </div>
                                    </div>

                                </div>

                            }
                        }
                    </div>
                </div>
            </div>
        </div>

        <!--  Pagination Area End -->
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" id="btnCat">
    </div>
</div>

<div class="page-content">
    <!-- Page title -->
    <div class="page-title">
        <div class="row justify-content-between align-items-center">
            <div class="col-md-6 d-flex align-items-center justify-content-between justify-content-md-start mb-3 mb-md-0">
                <!-- Page title + Go Back button -->
                <div class="d-inline-block">
                    <h5 class="h4 d-inline-block font-weight-400 mb-0 text-white">Products</h5>
                </div>
                <!-- Additional info -->
                <div class="align-items-center ml-4 d-inline-flex">
                    <span class="h4 text-info mb-0 mr-2">9</span>
                    <span class="text-sm opacity-7 text-white">New users</span>
                </div>
                <!-- Optional link -->
                <a href="table-listing.html" class="text-sm text-info d-none d-lg-inline-block ml-4">See table</a>
            </div>
            <div class="col-md-6 d-flex align-items-center justify-content-between justify-content-md-end">
                <!-- Filter input -->
                <form class="bg-neutral rounded-pill d-inline-block">
                    <div class="input-group input-group-sm input-group-merge input-group-flush">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-transparent"><i class="far fa-filter"></i></span>
                        </div>
                        <input type="text" class="form-control form-control-flush" placeholder="Filter results">
                    </div>
                </form>
                <a href="#modal-user-create" class="btn btn-sm btn-white btn-icon-only rounded-circle ml-4" data-toggle="modal">
                    <span class="btn-inner--icon"><i class="far fa-plus"></i></span>
                </a>
            </div>
        </div>
    </div>
    <div class="row">
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <div class="col-lg-3 col-sm-6">
                    <div class="card card-product">
                        <div class="card-header border-0">
                            <h2 class="h6">
                                <a href="#">@item.Name</a>
                            </h2>
                        </div>
                        <!-- Product image -->
                        <figure class="figure">
                            <img alt="Image placeholder" src="https://alldealz.ca/ProductImages/@item.image" class="img-center img-fluid">
                        </figure>
                        <div class="card-body">
                            <!-- Price -->
                            <div class="d-flex align-items-center mt-4">

                                <span class="h6 mb-0">$ @item.RegularPrice</span>
                                <span class="badge badge-success rounded-pill ml-auto">In stock</span>


                            </div>
                        </div>
                        <div class="p-4 border-top">
                            <div class="row">
                                <div class="col-6 text-center">
                                    <span class="h5 mb-0"> @item.SavingPercentage</span><sup>%</sup>
                                    <span class="d-block text-sm">Last week</span>
                                </div>
                                <div class="col-6 text-center">
                                    <span class="h5 mb-0">18</span><sup>%</sup>
                                    <span class="d-block text-sm">Last month</span>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="actions d-flex justify-content-between">
                                <a href="#" class="action-item">
                                    <i class="far fa-star"></i>
                                </a>
                                <a href="#" class="action-item">
                                    <i class="far fa-chart-pie"></i>
                                </a>
                                <a href="#" class="action-item text-danger">
                                    <i class="far fa-trash-alt"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
