@using (Html.BeginForm("BulkRecipeUpload", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
<div id="uploadRecipeBulk" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title mt-0" id="uploadBulkLabel">Upload Bulk Recipe</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-center">
                <h2>Upload Bulk Recipe</h2>
                <p class="lead">Supported File Formats <b> .XLS, .CSV, .XLSX</b></p>

                <!-- Upload  -->
                <div id="fileUploadRecipe-form" class="uploader">
                    @*<input id="file-upload" type="file" name="fileUpload" accept="image/*" />*@
                    <input type="file" name="RecipeCSVFile" id="fileUploadRecipe" accept=".csv" />
                    <label for="fileUploadRecipe" id="file-drag">
                        <img id="file-image" src="#" alt="Preview" class="hidden">
                        <div id="start">
                            <i class="fa fa-download" aria-hidden="true"></i>

                            <div>Select a file or drag here</div>
                            <div id="notimage" class="hidden">Please select an file to upload</div>
                            <span id="fileUploadRecipe-btn" class="btn btn-primary">Select a file</span>
                        </div>
                        <div id="response" class="hidden">
                            <i class="fa fa-download" aria-hidden="true"></i>
                            <div id="messages"></div>
                            <div>
                                <progress class="progress" id="file-progress" value="0" max="100">
                                    <span>0</span>%
                                </progress>
                                <i id="deleteSelection" class="fa fa-trash-alt text-danger mx-2 " aria-hidden="true"></i>
                            </div>
                        </div>
                    </label>
                </div>
            </div>
            <div class="card-footer text-right">
                <i class="fa fa-upload fa-sm btn btn-sm btn-success">
                    <span>Load Files</span>
                </i>
                @*onclick="csvFileUpload();"*@
                <button id="uploadPostFiles" onclick="csvFileRecipeUpload();" class="btn btn-primary btn-sm mx-3 hide">Upload Selected File</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
}
<script>
    $(document).ready(function () {
        $("#fileUploadRecipe").click(function () {
            $(this).val("");
        });
        $("#deleteSelection").click(function () {
            $("#fileUploadRecipe").val("");
            $("#response").addClass('hidden');
            //$("#messages").text("");
            $("#start").removeClass('hidden');
        });
        $("#fileUploadRecipe").change(function () {
            //alert($(this).val());
            var filename = $('#fileUploadRecipe').val().split('\\').pop();
            $("#response").removeClass('hidden');
            $("#messages").text(filename);
            $("#start").addClass('hidden');
        });
    });
    function csvFileRecipeUpload() {

        var rowCount = 0;
        var regex = /^([a-zA-Z0-9\s_\\.\-:])+(.csv|.txt)$/;
        if (regex.test($("#fileUploadRecipe").val().toLowerCase())) {

            if (typeof (FileReader) != "undefined") {
                var reader = new FileReader();
                reader.onload = function (e) {

                    var rows = e.target.result.split('\r\n');

                    for (var i = 0; i < rows.length; i++) {

                        var cells = rows[i].split(",");
                        var err = 0;
                        var RRC = rowCount + 1;
                        if (i == 0) {
                            if (cells.length == 9) {
                                const cellList = ["UserName","ProductCategory", "RecipeName", "RecipeCategory", "Ingredients", "Duration", "ImageName", "Credits", "Serving"]
                                $.each(cellList, function (key, value) {
                                    if (cells[key] != value) {
                                        $('#fileUploadRecipe').val('');
                                        alert("'" + cells[key] + "' Column is Either missing or Rearranged or would be typo.!");
                                        err = 1;
                                        return false;
                                    }
                                })
                                if (err > 0) {
                                    $('#fileUploadRecipe').val('');
                                    return false;
                                }
                            }
                            else {
                                $('#fileUploadRecipe').val('');
                                alert("Upload Csv file invalid template , Please check .");
                                return false;
                            }

                        } else {
                            if (cells.length == 9) {

                                if (cells[0] == "") {
                                    $('#fileUploadRecipe').val('');
                                    alert("Please check Row NO : " + RRC + " UserName is empty");
                                    return false;
                                }
                                if (cells[1] == "") {
                                    $('#fileUploadRecipe').val('');
                                    alert("Please check Row NO : " + RRC + " ProductCategory is empty");
                                    return false;
                                }

                                if (cells[2] == "") {
                                    $('#fileUploadRecipe').val('');
                                    alert("Please check Row NO : " + RRC + " RecipeName  is empty");
                                    return false;
                                }
                                if (cells[3] == "") {
                                    $('#fileUploadRecipe').val('');
                                    alert("Please check Row NO : " + RRC + " RecipeCategory  is empty");
                                    return false;
                                }
                                if (cells[4] == "") {
                                    $('#fileUploadRecipe').val('');
                                    alert("Please check Row NO : " + RRC + " Ingredients  is empty");
                                    return false;
                                }
                                if (cells[5] == "") {
                                    $('#fileUploadRecipe').val('');
                                    alert("Please check Row NO : " + RRC + " Duration  is empty");
                                    return false;
                                }
                                if (cells[6] == "") {
                                    $('#fileUploadRecipe').val('');
                                    alert("Please check Row NO : " + RRC + " ImageName  is empty");
                                    return false;
                                }
                                if (cells[7] == "") {
                                    $('#fileUploadRecipe').val('');
                                    alert("Please check Row NO : " + RRC + " Credits  is empty");
                                    return false;
                                }
                                if (cells[8] == "") {
                                    $('#fileUploadRecipe').val('');
                                    alert("Please check Row NO : " + RRC + " Serving  is empty");
                                    return false;
                                }


                            }
                            else {

                                if (cells.length > 1) {
                                    $('#fileUploadRecipe').val('');
                                    alert("Please check Row NO : " + RRC + " This row have comma simple or invalied Column length");
                                    return false;
                                }
                            }

                        }

                        rowCount += 1;

                    }

                    if (rowCount == rows.length) {
                        $("#hdnMsgStatus").val('Y');

                        $("#uploadPostFiles").click();

                    }

                }
                reader.readAsText($("#fileUploadRecipe")[0].files[0]);
            } else {
                $('#fileUploadRecipe').val('');
                alert("This browser does not support HTML5.");
                return false;
            }
        } else {
            $('#fileUploadRecipe').val('');
            alert("Please upload a valid CSV file.");
            return false;
        }
    }
